<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<com.google.android.material.chip.Chip
				android:id="@+id/image_author_chips"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:text="@string/Author"/>

			<TextView
				android:id="@+id/image_author"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignStart="@id/image_author_chips"
				android:layout_alignBottom="@+id/image_author_chips"
				android:layout_marginStart="75dp"
				android:layout_marginBottom="15dp"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<com.google.android.material.chip.Chip
				android:id="@+id/image_date_chips"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:text="@string/Date_Taken"/>

			<TextView
				android:id="@+id/image_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignStart="@id/image_date_chips"
				android:layout_alignBottom="@+id/image_date_chips"
				android:layout_marginStart="75dp"
				android:layout_marginBottom="15dp"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<com.google.android.material.chip.Chip
				android:id="@+id/image_tags_chips"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:text="@string/Tags"/>

			<TextView
				android:id="@+id/image_tags"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignStart="@id/image_tags_chips"
				android:layout_alignBottom="@+id/image_tags_chips"
				android:layout_marginStart="75dp"
				android:layout_marginBottom="15dp"/>

		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>